<!DOCTYPE html>
<html lang="en">
    <!-- Include Head -->
    <%- include('./partials/head.ejs') %> 
    <body>
        <!-- Include Navbar -->
        <%- include('./partials/nav.ejs') %>

        <main class="blogs content">

            <h2>All Blogs</h2>
            <hr>
            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog=>{ %>
                    <a class="single" href="/blogs/<%= blog._id %>">
                        <h3 class='title'><%= blog.title %></h3>
                        <p class='snippet'><%= blog.snippet %></p>
                    </a>
                <% }); %>
            <% } else {%>
                <h2>There isn't any blogs to display!</h2>
                <a href="/blogs/create">Create a new one!</a>
            <% } %>

            </main>

        <!-- Include footer -->
        <%- include('./partials/footer.ejs') %>

    </body>
</html>